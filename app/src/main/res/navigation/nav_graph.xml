<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mindeurfou.golfbook.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_connectionFragment"
            app:destination="@id/connectionFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/connectionFragment"
        android:name="com.mindeurfou.golfbook.ui.connection.ConnectionFragment"
        android:label="fragment_connection"
        tools:layout="@layout/fragment_connection" >
        <action
            android:id="@+id/action_connectionFragment_to_createPlayerFragment"
            app:destination="@id/createPlayerFragment" />
        <action
            android:id="@+id/action_connectionFragment_to_tournamentsFragment"
            app:destination="@id/tournamentsFragment"
            app:popUpTo="@id/connectionFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/createPlayerFragment"
        android:name="com.mindeurfou.golfbook.ui.createPlayer.CreatePlayerFragment"
        android:label="CreatePlayerFragment"
        tools:layout="@layout/fragment_create_player"/>

    <fragment
        android:id="@+id/coursesFragment"
        android:name="com.mindeurfou.golfbook.ui.courses.CoursesFragment"
        android:label="CoursesFragment"
        tools:layout="@layout/fragment_courses"/>

    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.mindeurfou.golfbook.ui.games.GamesFragment"
        android:label="GamesFragment"
        tools:layout="@layout/fragment_games"/>

    <fragment
        android:id="@+id/playersFragment"
        android:name="com.mindeurfou.golfbook.ui.players.PlayersFragment"
        android:label="PlayersFragment"
        tools:layout="@layout/fragment_players"/>

    <fragment
        android:id="@+id/tournamentsFragment"
        android:name="com.mindeurfou.golfbook.ui.tournaments.TournamentsFragment"
        android:label="TournamentsFragment"
        tools:layout="@layout/fragment_tournaments">
        <action
            android:id="@+id/action_tournamentsFragment_to_tournamentDetailsFragment"
            app:destination="@id/tournamentDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/tournamentDetailsFragment"
        android:name="com.mindeurfou.golfbook.ui.tournamentDetails.TournamentDetailsFragment"
        android:label="TournamentDetailsFragment"
        tools:layout="@layout/fragment_tournament_details"/>

</navigation>