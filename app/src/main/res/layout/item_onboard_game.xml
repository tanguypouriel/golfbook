<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    style="@style/Widget.Golfbook.Cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <GridLayout
            android:id="@+id/playersLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:rowCount="4"
            android:columnCount="4">

            <ImageView
                android:id="@+id/imageAvatar1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:src="@drawable/man_4"
                android:layout_rowWeight="3"
                android:layout_columnWeight="1"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/imageAvatar2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:src="@drawable/man_4"
                android:layout_rowWeight="3"
                android:layout_columnWeight="1"
                android:padding="4dp"
                />

            <ImageView
                android:id="@+id/imageAvatar3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:src="@drawable/man_4"
                android:layout_rowWeight="3"
                android:layout_columnWeight="1"
                android:padding="4dp"
                />

            <ImageView
                android:id="@+id/imageAvatar4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:src="@drawable/man_4"
                android:layout_rowWeight="3"
                android:layout_columnWeight="1"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/player1Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/TextAppearance.Golfbook.subtitle3"
                tools:text="Frere le boss"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/player2Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/TextAppearance.Golfbook.subtitle3"
                tools:text="Frere le boss"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/player3Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/TextAppearance.Golfbook.subtitle3"
                tools:text="Frere le boss"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/player4Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/TextAppearance.Golfbook.subtitle3"
                tools:text="Frere le boss"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:padding="4dp"/>
        </GridLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardInfoLayoutHeight"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/titleGame"
                style="@style/TextAppearance.Golfbook.h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                tools:text="Partie du 16/07/21"/>

            <TextView
                android:id="@+id/joinGameBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextAppearance.Golfbook.h2"
                android:background="@color/colorSecondary"
                android:textColor="@color/white"
                android:text="@string/joinGame" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>