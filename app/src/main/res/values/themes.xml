<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Golfbook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorArdoise</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorSecondaryVariant</item>
        <item name="bottomNavigationStyle">@style/Widget.Golfbook.BottomNavigation</item>
    </style>
    
    <style name="ThemeOverlay.Golfbook.greenPrimary" parent="">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

    <style name="TextAppearance.Golfbook.baseGlacial" parent="">
        <item name="fontFamily">@font/glacial_indif</item>
        <item name="android:textColor">@color/colorArdoise</item>
    </style>

    <style name="TextAppearance.Golfbook.Title" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="fontFamily">@font/lulo_clean</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.h1" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="fontFamily">@font/lulo_clean</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.h2" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="fontFamily">@font/lulo_clean</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.h3" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="fontFamily">@font/lulo_clean</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.h4" parent="">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="fontFamily">@font/lulo_clean</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.subtitle1" parent="TextAppearance.Golfbook.baseGlacial">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.subtitle2" parent="TextAppearance.Golfbook.baseGlacial">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.subtitle3" parent="TextAppearance.Golfbook.baseGlacial">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Golfbook.subtitle4" parent="TextAppearance.Golfbook.baseGlacial">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/colorArdoise</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Golfbook.Cardview" parent="CardView">
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="Widget.Golfbook.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Golfbook.TextInputLayout.HintText</item>
        <item name="android:textAppearance">@style/TextAppearance.Golfbook.TextInputLayout.InputText</item>
    </style>
    
    <style name="Widget.Golfbook.TextInputLayout.Colored" parent="Widget.Golfbook.TextInputLayout">
        <item name="boxStrokeColor">@color/stroke_color_selector</item>
        <item name="hintTextColor">@color/colorSecondaryVariant</item>

    </style>

    <style name="TextAppearance.Golfbook.TextInputLayout.HintText" parent="TextAppearance.Golfbook.baseGlacial">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Golfbook.TextInputLayout.InputText" parent="TextAppearance.Golfbook.baseGlacial">
    </style>

    <style name="Widget.Golfbook.Button.dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/lulo_clean</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/colorSecondaryVariant</item>
        <item name="android:textColor">@color/colorArdoise</item>
    </style>

    <style name="Widget.Golfbook.Button.bright" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/glacial_indif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="Widget.Golfbook.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorHill</item>
    </style>

    <style name="Widget.Golfbook.floatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorSecondaryVariant</item>
    </style>

    <style name="Widget.Golfbook.extendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorSecondaryVariant</item>
    </style>
</resources>